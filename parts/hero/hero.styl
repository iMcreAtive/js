#hero
	min-height 700px
	margin-top 0
	background #f7f7f7

	& .back
		background #f7f7f7 url('./images/hero_bg.jpg') no-repeat
		width 60%
		left 40%
		min-height 700px
		position absolute

	& h1
		margin-top 100px
		display inline-block
		width 40%
		font-weight 100
		margin-bottom 10px
		color #47525d
		font-size 40px
		line-height 1.5

	& p
		font-size 22px
		width 40%
		color #57616b
		margin-top 0px

	& a.btn
		background #0071e0
		padding 15px 20px
		color #fff
		font-size 20px
		-webkit-border-radius 5px
		-moz-border-radius 5px
		border-radius 5px
		display inline-block
		margin-top 50px
		text-decoration none

	& span
		display block
		margin-top 20px

		& a
			color #0071e0
			text-decoration none
			border-bottom 1px solid #0071e0

@media screen and (min-width 1710px)
	#hero .back
		right 0px
		background-position reight center

@media screen and (max-width 1140px)
	#hero h1,#hero p,#hero span
		padding-left 20px

	#hero a.btn
		margin-left 20px

@media screen and (max-width 1070px)
	#hero
		& .back 
			width 50%
			left 50%
			min-height 700px
			position absolute

		& h1, p
			width 50%

@media screen and (max-width 1000px)
	#hero h1
		font-size 30px
		line-height 1.2

@media screen and (max-width 900px)
	#hero a.btn
		font-size 16px
		margin-right 20px
		text-align center


@media screen and (max-width 680px)
	#hero
		min-height 500px

		& h1
			margin-top 40px
			font-size 25px
			font-weight bold

		& h1, p
			width 70%

		& .back
			width 30%
			left 70%
			min-height 500px
			position absolute

		& span
			display table
			margin 20px auto

@media screen and (max-width 450px)
	#hero
		min-height 550px

		& h1, p
			width 90%
			padding 0 5%
			text-align center

		& .back
			min-height 550px
			display none

@media screen and (max-width 345px)
	#hero
		& h1
			font-size 22px

		& p
			font-size 19px
