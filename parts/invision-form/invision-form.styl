border-radius($radius)
	-webkit-border-radius $radius
	-moz-border-radius $radius
	border-radius $radius

#invision
	background #323a45
	display block
	width 100%
	padding 110px 0 100px 0

	& h2
		color #fff
		text-align center
		font-weight 100

	& .four-box
		width 23%
		margin 15px 0
		padding 0 1%
		display block
		float left
		position relative

		& input
			border: 2px solid #323a45
			padding 15px 10px 15px 40px
			font-size 20px
			border-radius(4px)
			display block
			max-width 85%
			margin 5px 0

			&.invalid
				border 2px solid #ff3366

			&:focus
				outline none

			&:after
				content ""
				background url("./images/invasion.png")
				width 24px
				height 24px
				position absolute
				left 5px
				top 15px

		& span
			position absolute
			top 20px
			left 20px;
			width 24px
			height 24px
			background url("./images/invasion.png")
			background-position 0px 0px

		& button
			background #ff3366
			color #fff
			width 100%
			text-align center
			padding 17px 5px
			text-transform uppercase
			font-size 13px
			border 2px solid #ff3366
			border-radius(4px)
			margin-top: 7px
			cursor pointer
			transition 0.3s

			&:hover
				background #F42156
				transition 0.3s

	& p
		color #747c83
		text-align center
		font-size 13px

		& a
			color #747c83

@media screen and (max-width 1070px)
	#invision
		& .four-box
			width 300px
			float none
			display table
			margin 0 auto

			& button
				width 100%
				margin-left 0px

		& h2, p
			padding-left 10px
			padding-right 10px

@media screen and (max-width 450px)
	#invision .four-box span
		left 15px

@media screen and (max-width 345px)
	#invision
		& .four-box
			width 290px

			& button
				width 101.2%
				margin-left -2px
